<div class="row">
  <div class="col-md-6 offset-md-3">
    <h1 class="display-4">
      Discover
    </h1>
    <p class="lead text">
      Posts liked by people you follow
    </h3>

    <ul class="nav nav-pills nav-justified">
      <li class="nav-item">
        <%= link_to "Posts", user_path(@user.username), class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "Liked photos", liked_photos_path(@user.username), class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "Feed", following_photos_path(@user.username), class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "Followers", followers_users_path(@user.username), class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "Following", following_users_path(@user.username), class: "nav-link" %>
      </li>
    </ul>
  </div>
</div>

<% current_user.discover.each do |photo| %>

    <%= render "photos/photo", photo: photo %>

<% end %>
